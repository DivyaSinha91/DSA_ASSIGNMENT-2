#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
	int a,b;
    float c,d;
    scanf("%d %d", &a,&b);
    
    int sum=a+b;
    int sub=a-b;
    printf("%d %d\n", sum,sub);
    scanf("%f %f", &c,&d);
    float add=c+d;
    float diff=c-d;
    printf("%0.1f %0.1f", add,diff);
    return 0;
}
